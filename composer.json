{
    "name": "riclep/laravel-storyblok-typography",
    "description": "A bunch of typographical helpers and features for Laravel Storyblok",
    "keywords": [
        "riclep",
        "laravel-storyblok-typography"
    ],
    "homepage": "https://github.com/riclep/laravel-storyblok-typography",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Richard Le Poidevin",
            "email": "ric@sirric.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
	    "mundschenk-at/php-typography": "^6.6",
	    "riclep/laravel-storyblok": "^2.14"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Riclep\\StoryblokTypography\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Riclep\\StoryblokTypography\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
